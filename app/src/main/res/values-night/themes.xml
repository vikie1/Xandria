<!--The app is mostly black and white so having a night theme doesn't seem necessary, but if needed
    the code below this comment should be deleted and the one above uncommented-->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Xandria" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- default fonts -->
        <item name="fontFamily">@font/play</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name = "boxStrokeColor">@color/teal_700</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name ="android:background">@drawable/round_drawable</item>
    </style>
</resources>